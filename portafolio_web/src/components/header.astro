---
import { basics } from '@cv';

const {name, label, image, location, profiles, phone, email } = basics;
const {city, country} = location;
---

<section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
        </div>
        <span>
            <!-- Iconos -->
            {city}, {country}
        </span>
        <footer>
            {
                email && (
                    <a 
                    href={`mailto:${email}`}
                    title={`Enviar un correo electrÃ³nico a ${name} al correo ${email}`}
                    target="_blank"
                    rel="noopener noreferrer"
                    >  
                    <!-- Robar icono -->
                    </a>
                )
            }
        </footer>
    </div>
    <figure>
        <img src={image} alt={name}>
    </figure>
</section>

<style>
    section {
        max-width: 700px;
        margin: 0 auto 72px;
    }
</style>